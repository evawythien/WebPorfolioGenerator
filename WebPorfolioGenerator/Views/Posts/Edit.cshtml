@model WebPorfolioGenerator.Models.Post
@{
    ViewData["Title"] = "Edit";
    DateTime thisDay = DateTime.Today;
}
<h2>Edit</h2>
<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PostId" />
            <input type="hidden" asp-for="PortfolioId" class="form-control" />
            <input type="hidden" asp-for="CreationDate" class="form-control" />
            <input type="hidden" asp-for="ModificationDate" class="form-control" value="@thisDay.ToString("d")" />

            <div class="form-group col-md-12">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="Subtitle" class="control-label"></label>
                <input asp-for="Subtitle" class="form-control" />
                <span asp-validation-for="Subtitle" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="Body" class="control-label"></label>
                <textarea data-provide="markdown" id="postBody" asp-for="Body" class="form-control"></textarea>
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>
                    
            <div class="row buttonContainer">
                <div class="col-md-12 R">
                    <a class="linkButton" asp-action="Index">Back to List</a>
                    <input type="submit" value="Save" class="btn btn-default linkButton" />
                </div>
            </div>
        </form>
    </div>
</div>
