@model WebPorfolioGenerator.Models.MenuItem
@{
    ViewData["Title"] = "Create";
}
<h2>Create</h2>
<h4>MenuItem</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-md-2">
                    <label asp-for="MenuOrder" class="control-label">Order</label>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="MenuName" class="control-label">Name</label>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Url" class="control-label"></label>
                </div>
            </div>
            <div id="menuElement" class="row">
                <div class="form-group col-md-2">
                    <input asp-for="MenuOrder" class="form-control" />
                    <span asp-validation-for="MenuOrder" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <input asp-for="MenuName" class="form-control" />
                    <span asp-validation-for="MenuName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <input asp-for="Url" class="form-control" />
                    <span asp-validation-for="Url" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2">
                    <a><i class="fa fa-times fa-3x" aria-hidden="true"></i></a>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-3">
                    <input id="newItemMenu" value="New item" class="btn btn-default" />
                </div>
                <div class="form-group col-md-3">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>

        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
